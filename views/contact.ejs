<%- include('base/header') -%>
<div class="contact">
  <div class="container">
    <div class="row" style="padding-top: 4.5rem">
      <div class="col-6 d-flex align-items-center justify-content-center">
        <div class="d-none d-md-block">
          <img src="/img/contact.png" alt="contact-img" class="contact-img" />
        </div>
      </div>
      <div class="col-12 col-md-6 mt-0 mt-md-3">
        <div class="contact-form-wrapper">
          <form
            action="/contact"
            class="contact-form d-flex flex-column"
            method="post"
          >
            <h3
              class="text-uppercase mb-4 text-center"
              style="font-weight: 900; color: var(--primary-orange)"
            >
              RESERVE
              <span style="color: var(--primary-black)">YOUR SEAT !</span>
            </h3>
            <div class="d-flex justify-content-between">
              <div
                class="d-flex flex-column me-4 contact-input-wrap"
                style="width: 100%"
              >
                <span>Full Name</span>
                <input
                  placeholder="Falano Prasad"
                  autofocus="autofocus"
                  name="name"
                  type="text"
                  style="width: 100%"
                  required
                />
              </div>
              <div
                class="d-flex flex-column contact-input-wrap"
                style="width: 100%"
              >
                <span>Phone Number</span>
                <input
                  class=""
                  placeholder="98XXXXXXXX"
                  type="number"
                  name="phone"
                  style="width: 100%"
                  required
                />
              </div>
            </div>
            <div class="d-flex flex-column contact-input-wrap mt-4">
              <span>Address</span>
              <input
                placeholder="Pari Dadha, Sadarmukam"
                type="text"
                name="address"
                required
              />
            </div>
            <div class="d-flex flex-column contact-input-wrap mt-4">
              <span>Email Address</span>
              <input
                placeholder="falano@aafnomail.com"
                type="email"
                name="email"
                required
              />
            </div>
            <div class="d-flex flex-column contact-input-wrap mt-4">
              <span>Preferred Course</span>
              <select name="course" required>
                <option value="" disabled selected>Select</option>
                <% for (item in courses) { %>
                <option value="<%= courses[item].title %>" name="<%= courses[item].title %>"><%= courses[item].title %></option>
                <% } %>
              </select>
            </div>
            <div class="d-flex flex-column contact-input-wrap mt-4">
              <span>Your Message</span>
              <textarea
                placeholder="I wanted to know about..."
                rows="11"
                name="message"
                required
              ></textarea>
            </div>
            <div
              class="g-recaptcha mt-4"
              data-sitekey="6LcjpSAmAAAAAKyyebC7KARKYIcmeCJTRVjUYPPP"
            ></div>
            <% if (typeof errorMessage !== 'undefined') { %>
            <span
              class="mt-3"
              style="font-size: 14px; font-weight: 500; color: red"
              ><%= errorMessage %></span
            >
            <% } %>
            <div class="d-flex justify-content-center">
              <input
                class="mt-4 btn-primary"
                type="submit"
                value="RESERVE NOW"
                style="padding: 12px 22px; border-radius: 6px"
              />
            </div>
          </form>
        </div>
      </div>
      <div class="col-12 mt-3 mt-md-5">
        <div class="row mt-0 mt-md-2">
          <div class="col-12 col-md-4 mt-4 mt-md-0">
            <div class="contact-info-card">
              <div
                style="font-size: 52px; color: var(--primary-orange)"
                class="me-4"
              >
                <i class="fa-solid fa-clock"></i>
              </div>
              <div class="d-flex flex-column">
                <div
                  style="
                    color: var(--primary-orange);
                    font-weight: 600;
                    font-size: 21px;
                  "
                  class="text-uppercase"
                >
                  our Open Hours
                </div>
                <div class="mt-2" style="font-weight: 500; font-size: 15px">
                  9:00 AM - 5:00 PM
                </div>
                <div class="mt-2" style="font-weight: 500; font-size: 15px">
                  Sunday - Friday
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-4 mt-4 mt-md-0">
            <div class="contact-info-card">
              <div
                style="font-size: 48px; color: var(--primary-orange)"
                class="me-4"
              >
                <i class="fa-solid fa-phone"></i>
              </div>
              <div class="d-flex flex-column">
                <div
                  style="
                    color: var(--primary-orange);
                    font-weight: 600;
                    font-size: 21px;
                  "
                  class="text-uppercase"
                >
                  reach us at
                </div>
                <div class="mt-2" style="font-weight: 500; font-size: 15px">
                  +977 9860688212
                </div>
                <div class="mt-2" style="font-weight: 500; font-size: 15px">
                  +977 9863932720
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-4 mt-4 mt-md-0">
            <div class="contact-info-card">
              <div
                style="font-size: 48px; color: var(--primary-orange)"
                class="me-4"
              >
                <i class="fa-solid fa-location-dot"></i>
              </div>
              <div class="d-flex flex-column">
                <div
                  style="
                    color: var(--primary-orange);
                    font-weight: 600;
                    font-size: 21px;
                  "
                  class="text-uppercase"
                >
                  we are located at
                </div>
                <div class="mt-2" style="font-weight: 500; font-size: 15px">
                  Beside Sunrise Bank
                </div>
                <div class="mt-2" style="font-weight: 500; font-size: 15px">
                  Putalisadak, Kathmandu
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('base/footer') -%>
