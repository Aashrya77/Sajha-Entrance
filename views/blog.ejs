<%- include('base/header') -%>
<div class="blog">
  <div class="container">
    <div class="row" style="padding-top: 4.5rem">
      <div class="col-12 col-md-8">
        <% if (advertisement) { %>
        <a href="<%= advertisement.advertisementLink %>">
          <div class="advertisement-div mb-4">
            <img
              src="/advertisements/<%= advertisement.advertisementFile %>"
              alt="advertisement-image"
              class="advertisement-image"
            />
          </div>
        </a>
        <% } %>
        <h3 class="mb-0" style="font-weight: 900; color: var(--primary-orange)">
          <%= blogData.blogTitle %>
        </h3>
        <% if (blogData.blogImage) { %>
        <div class="blog-detail-image-container mt-3">
          <img
            src="/blogs/<%= blogData.blogImage %>"
            alt="<%= blogData.blogTitle %>"
            class="blog-detail-image"
          />
        </div>
        <% } %>
        <div
          class="mt-3"
          style="font-weight: 600; color: var(--primary-orange)"
        >
          <span style="border-bottom: 2px solid var(--primary-orange)"
            ><%= (blogData.createdAt).toLocaleDateString("en-US", { weekday:
            'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span
          >
        </div>
        <div class="mt-3 blogDescription">
          <%- blogData.blogDescriptionFormatted %>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <h3
          class="text-uppercase mb-0 text-center mt-5 mt-lg-0"
          style="font-weight: 900; color: var(--primary-orange)"
        >
          SOME OTHER
          <span style="color: var(--primary-black)">BLOGS</span>
        </h3>
        <% for (items in blogs) { %> <% if (blogs[items].id != blogData.id) { %>
        <div class="col-12 mt-4">
          <a href="/blog/<%= blogs[items]._id %>">
            <div class="blog-card-wrapper">
              <% if (blogs[items].blogImage) { %>
              <div class="blog-image-container">
                <img
                  src="/blogs/<%= blogs[items].blogImage %>"
                  alt="<%= blogs[items].blogTitle %>"
                  class="blog-card-image"
                />
              </div>
              <% } %>
              <div class="p-4">
                <div
                  style="font-weight: 700; font-size: 20px"
                  class="text-truncate"
                >
                  <%= blogs[items].blogTitle %>
                </div>
                <div
                  style="font-weight: 500; font-size: 14.5px"
                  class="text-truncate mt-2"
                >
                  <%= blogs[items].blogDescriptionUnformatted %>
                </div>
                <div class="mt-3 d-flex justify-content-between align-items-center">
                  <span class="blog-date px-2"
                    ><%= (blogs[items].createdAt).toLocaleDateString("en-US", {
                    weekday: 'long', year: 'numeric', month: 'long', day:
                    'numeric' }) %></span
                  >
                  <button class="btn-read-more">
                    <i class="fa-solid fa-arrow-right me-1"></i>Read More
                  </button>
                </div>
              </div>
            </div>
          </a>
        </div>
        <% } %> <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('base/footer') -%>
