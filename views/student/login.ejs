<%- include('../base/header') -%>

<div class="login-page-wrapper" style="min-height: calc(100vh - 87px); padding-top: 120px; padding-bottom: 60px;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-5">
        <div class="login-card">
          <div class="login-header text-center mb-4">
            <h2 class="login-title">Student Login</h2>
            <p class="login-subtitle">Sign in to access your online classes</p>
          </div>

          <% if (errorMessage) { %>
            <div class="alert alert-danger" role="alert">
              <i class="fa-solid fa-exclamation-circle me-2"></i><%= errorMessage %>
            </div>
          <% } %>

          <form action="/student/login" method="POST" class="login-form">
            <div class="form-group mb-4">
              <label for="studentId" class="form-label">
                <i class="fa-solid fa-id-card me-2"></i>Student ID
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="studentId" 
                name="studentId" 
                placeholder="Enter your Student ID"
                required
                autofocus
              />
            </div>

            <div class="form-group mb-4">
              <label for="password" class="form-label">
                <i class="fa-solid fa-lock me-2"></i>Password
              </label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                placeholder="Enter your password"
                required
              />
            </div>

            <button type="submit" class="btn-primary w-100 mb-3">
              <i class="fa-solid fa-sign-in-alt me-2"></i>Login
            </button>
          </form>

          <div class="login-footer text-center mt-4">
            <p class="mb-0" style="color: #666; font-size: 14px;">
              Need help? <a href="/contact" style="color: var(--primary-orange);">Contact us</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../base/footer') -%>
